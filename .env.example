PORT=3000
# Node environment: development, production, or test
NODE_ENV=development

# Enable debug mode to show stack traces (true/false)
DEBUG=false

# Enable Swagger documentation (true/false)
SWAGGER_ENABLED=true

# Allowed CORS origins (comma-separated or *)
CORS_ORIGIN=*

# JWT Secret key (must be at least 10 characters)
JWT_ACCESS_TOKEN_SECRET=your_secret_key_here

# JWT access token expiration time (e.g., 1s, 1m, 1h, 1d)
JWT_ACCESS_TOKEN_EXPIRES_IN=1h

# Database connection string
DATABASE_URL=postgresql://username:password@hostname:port/koywe?schema=public

# Quote expiration time in minutes (default: 15)
QUOTE_EXPIRES_IN_MINUTES=15
